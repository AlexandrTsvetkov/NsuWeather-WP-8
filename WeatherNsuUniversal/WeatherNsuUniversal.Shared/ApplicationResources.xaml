<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherNsuUniversal"
    xmlns:interop="using:Windows.UI.Xaml.Interop">

    <Color x:Key="MainApplicationColor">#299546</Color>
    <SolidColorBrush x:Key="MainApplicationColorBrush" Color="{StaticResource MainApplicationColor}"/>
    <FontFamily x:Key="MainApplicationFont">/Fonts/Code-Pro-LC.otf#Code Pro LC</FontFamily>
    
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainApplicationFont}"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>

</ResourceDictionary>
